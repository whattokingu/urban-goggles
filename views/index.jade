extends layout

block content
  div.container-fluid#index
    div.row
      div.col-md-4.col-md-offset-3
        div.input-group
          div.input-group-btn
            form#form-submit
              input#url-input.form-control(type="text", placeholder="Paste your URL here", name="url")
            button#submit-btn.btn.btn-default(onclick="sendUrl()") shorten URL

        div#error-msg
  script(src='/javascripts/index.js')